<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <template class="ContainersPanel" parent="GtkWidget">
    <property name="layout-manager">
      <object class="GtkBinLayout"/>
    </property>

    <child>
      <object class="GtkStack" id="main_stack">
        <property name="transition-type">crossfade</property>

        <child>
          <object class="GtkSpinner" id="spinner">
            <property name="halign">center</property>
            <property name="height-request">30</property>
            <property name="spinning">True</property>
            <property name="width-request">30</property>
            <property name="valign">center</property>
            <property name="vexpand">True</property>
          </object>
        </child>

        <!-- Main view -->
        <child>
          <object class="GtkOverlay" id="overlay">

            <!-- Progress bar overlay -->
            <child type="overlay">
              <object class="GtkStack" id="progress_stack">
                <property name="transition-type">crossfade</property>
                <property name="valign">start</property>

                <child>
                  <object class="GtkStackPage">
                    <property name="name">empty</property>
                    <property name="child">
                      <object class="AdwBin"/>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="GtkStackPage">
                    <property name="name">bar</property>
                    <property name="child">
                      <object class="GtkProgressBar" id="progress_bar">
                        <style>
                          <class name="osd"/>
                        </style>
                      </object>
                    </property>
                  </object>
                </child>

              </object>
            </child>

            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>

                <child>
                  <object class="GtkSearchBar" id="search_bar">

                    <property name="child">
                      <object class="GtkSearchEntry" id="search_entry">
                        <property name="max-width-chars">48</property>
                      </object>
                    </property>

                  </object>
                </child>

                <!-- List of containers -->
                <child>
                  <object class="AdwPreferencesPage">
                    <property name="vexpand">True</property>

                    <child>
                      <object class="ContainersGroup" id="containers_group">
                        <binding name="container-list">
                          <lookup name="container-list">ContainersPanel</lookup>
                        </binding>
                        <property name="title" translatable="yes">Summary</property>
                        <property name="show-running-settings-key">show-only-running-containers</property>
                        <property name="no-containers-label" translatable="yes">No containers found</property>
                      </object>
                    </child>

                  </object>
                </child>

              </object>
            </child>

          </object>
        </child>

      </object>
    </child>

  </template>
</interface>
