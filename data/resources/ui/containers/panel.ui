<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <template class="PdsContainersPanel" parent="GtkWidget">
    <property name="layout-manager">
      <object class="GtkBinLayout"/>
    </property>

    <child>
      <object class="GtkStack" id="main_stack">
        <property name="transition-type">crossfade</property>

        <child>
          <object class="GtkStackPage">
            <property name="name">spinner</property>

            <property name="child">
              <object class="GtkSpinner">
                <property name="halign">center</property>
                <property name="height-request">30</property>
                <property name="spinning">True</property>
                <property name="width-request">30</property>
                <property name="valign">center</property>
                <property name="vexpand">True</property>
              </object>
            </property>

          </object>
        </child>

        <!-- List of containers -->
        <child>
          <object class="GtkStackPage">
            <property name="name">containers</property>

            <property name="child">

              <object class="GtkBox">
                <property name="orientation">vertical</property>

                <child>
                  <object class="AdwPreferencesPage">
                    <property name="vexpand">True</property>

                    <child>
                      <object class="PdsContainersGroup" id="containers_group">
                        <binding name="container-list">
                          <lookup name="container-list">PdsContainersPanel</lookup>
                        </binding>
                        <property name="title" translatable="yes">Summary</property>
                        <property name="show-running-settings-key">show-only-running-containers</property>
                        <property name="no-containers-label" translatable="yes">No containers found</property>
                      </object>
                    </child>

                  </object>
                </child>

                <child>
                  <object class="GtkActionBar">
                    <binding name="revealed">
                      <lookup name="selection-mode" type="ContainerList">
                        <lookup name="container-list">PdsContainersPanel</lookup>
                      </lookup>
                    </binding>

                    <child type="center">
                      <object class="AdwSqueezer">
                        <property name="transition-type">crossfade</property>

                        <child>
                          <object class="GtkBox">
                            <style>
                              <class name="toolbar"/>
                            </style>
                            <property name="halign">center</property>

                            <child>
                              <object class="GtkButton">
                                <style>
                                  <class name="flat"/>
                                </style>
                                <property name="action-name">containers-panel.start-or-resume-selection</property>

                                <child>
                                  <object class="GtkBox">
                                    <property name="spacing">6</property>

                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">media-playback-start-symbolic</property>
                                      </object>
                                    </child>

                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label" translatable="yes">Start/Resume</property>
                                      </object>
                                    </child>

                                  </object>
                                </child>

                              </object>
                            </child>

                            <child>
                              <object class="GtkButton">
                                <style>
                                  <class name="flat"/>
                                </style>
                                <property name="action-name">containers-panel.stop-selection</property>

                                <child>
                                  <object class="GtkBox">
                                    <property name="spacing">6</property>

                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">media-playback-stop-symbolic</property>
                                      </object>
                                    </child>

                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label" translatable="yes">Stop</property>
                                      </object>
                                    </child>

                                  </object>
                                </child>

                              </object>
                            </child>

                            <child>
                              <object class="GtkButton">
                                <style>
                                  <class name="flat"/>
                                </style>
                                <property name="action-name">containers-panel.pause-selection</property>

                                <child>
                                  <object class="GtkBox">
                                    <property name="spacing">6</property>

                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">media-playback-pause-symbolic</property>
                                      </object>
                                    </child>

                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label" translatable="yes">Pause</property>
                                      </object>
                                    </child>

                                  </object>
                                </child>

                              </object>
                            </child>

                            <child>
                              <object class="GtkButton">
                                <style>
                                  <class name="flat"/>
                                </style>
                                <property name="action-name">containers-panel.restart-selection</property>

                                <child>
                                  <object class="GtkBox">
                                    <property name="spacing">6</property>

                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">view-refresh-symbolic</property>
                                      </object>
                                    </child>

                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label" translatable="yes">Restart</property>
                                      </object>
                                    </child>

                                  </object>
                                </child>
                                ^
                              </object>
                            </child>

                            <child>
                              <object class="GtkButton">
                                <style>
                                  <class name="flat"/>
                                </style>
                                <property name="action-name">containers-panel.delete-selection</property>

                                <child>
                                  <object class="GtkBox">
                                    <property name="spacing">6</property>

                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">user-trash-symbolic</property>
                                      </object>
                                    </child>

                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label" translatable="yes">Delete</property>
                                      </object>
                                    </child>

                                  </object>
                                </child>

                              </object>
                            </child>

                          </object>
                        </child>

                        <child>
                          <object class="GtkBox">
                            <style>
                              <class name="toolbar"/>
                            </style>
                            <property name="halign">center</property>

                            <child>
                              <object class="GtkButton">
                                <style>
                                  <class name="flat"/>
                                </style>
                                <property name="action-name">containers-panel.start-or-resume-selection</property>
                                <property name="icon-name">media-playback-start-symbolic</property>
                                <property name="tooltip-text" translatable="yes">Start/Resume</property>
                              </object>
                            </child>

                            <child>
                              <object class="GtkButton">
                                <style>
                                  <class name="flat"/>
                                </style>
                                <property name="action-name">containers-panel.stop-selection</property>
                                <property name="icon-name">media-playback-stop-symbolic</property>
                                <property name="tooltip-text" translatable="yes">Stop</property>
                              </object>
                            </child>

                            <child>
                              <object class="GtkButton">
                                <style>
                                  <class name="flat"/>
                                </style>
                                <property name="action-name">containers-panel.pause-selection</property>
                                <property name="icon-name">media-playback-pause-symbolic</property>
                                <property name="tooltip-text" translatable="yes">Pause</property>
                              </object>
                            </child>

                            <child>
                              <object class="GtkButton">
                                <style>
                                  <class name="flat"/>
                                </style>
                                <property name="action-name">containers-panel.restart-selection</property>
                                <property name="icon-name">view-refresh-symbolic</property>
                                <property name="tooltip-text" translatable="yes">Restart</property>
                              </object>
                            </child>

                            <child>
                              <object class="GtkButton">
                                <style>
                                  <class name="flat"/>
                                </style>
                                <property name="action-name">containers-panel.delete-selection</property>
                                <property name="icon-name">user-trash-symbolic</property>
                                <property name="tooltip-text" translatable="yes">Delete</property>
                              </object>
                            </child>

                          </object>
                        </child>

                      </object>
                    </child>

                  </object>
                </child>

              </object>
            </property>

          </object>
        </child>

      </object>
    </child>

  </template>
</interface>
