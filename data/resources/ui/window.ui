<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <menu id="menu">
    <section>
      <item>
        <attribute name="custom">theme</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">_Add Connection…</attribute>
        <attribute name="action">win.add-connection</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">_Show Podman Info</attribute>
        <attribute name="action">win.show-podman-info</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">_Download new image…</attribute>
        <attribute name="action">image.pull</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Prune unused images…</attribute>
        <attribute name="action">images.prune-unused</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">_Create container…</attribute>
        <attribute name="action">container.create</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Pods</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>

  <template class="Window" parent="AdwApplicationWindow">

    <property name="content">
      <object class="AdwToastOverlay" id="toast_overlay">

        <child>
          <object class="AdwLeaflet" id="leaflet">
            <property name="can-navigate-back">True</property>
            <property name="can-unfold">False</property>

            <child>
              <object class="GtkStack" id="main_stack">
                <property name="transition-type">crossfade</property>

                <!-- Empty Page -->
                <child>
                  <object class="AdwBin"/>
                </child>

                <!-- Welcome Page -->
                <child>
                  <object class="GtkStackPage">
                    <property name="name">welcome</property>
                    <property name="child">
                      <object class="WelcomePage"/>
                    </property>
                  </object>
                </child>

                <!-- Connection Chooser Page -->
                <child>
                  <object class="GtkStackPage">
                    <property name="name">connection-chooser</property>
                    <property name="child">
                      <object class="ConnectionChooserPage">
                        <binding name="connection-manager">
                          <lookup name="connection-manager">Window</lookup>
                        </binding>
                      </object>
                    </property>
                  </object>
                </child>

                <!-- Client View -->
                <child>
                  <object class="GtkBox" id="client_box">
                    <property name="orientation">vertical</property>

                    <!-- Headerbar -->
                    <child>
                      <object class="AdwHeaderBar">
                        <property name="centering-policy">strict</property>

                        <child type="start">
                          <object class="GtkToggleButton" id="search_button">
                            <property name="icon-name">system-search-symbolic</property>
                          </object>
                        </child>

                        <child type="title">
                          <object class="GtkStack" id="title_stack">
                            <property name="transition-type">crossfade</property>

                            <child>
                              <object class="GtkStackPage">
                                <property name="name">title</property>
                                <property name="child">
                                  <object class="AdwViewSwitcherTitle" id="title">
                                    <property name="stack">panel_stack</property>
                                  </object>
                                </property>

                              </object>
                            </child>

                            <child>
                              <object class="GtkStackPage">
                                <property name="name">search</property>
                                <property name="child">
                                  <object class="GtkSearchEntry" id="search_entry"/>
                                </property>
                              </object>
                            </child>

                          </object>
                        </child>

                        <child type="end">
                          <object class="GtkMenuButton" id="menu_button">
                            <property name="icon-name">open-menu-symbolic</property>
                            <property name="menu-model">menu</property>
                          </object>
                        </child>

                        <child type="end">
                          <object class="GtkMenuButton">
                            <property name="popover">
                              <object class="ConnectionSwitcherPopup">
                                <binding name="connection-manager">
                                  <lookup name="connection-manager">Window</lookup>
                                </binding>
                              </object>
                            </property>
                            <property name="icon-name">network-server-symbolic</property>
                          </object>
                        </child>

                      </object>
                    </child>

                    <child>
                      <object class="GtkStack" id="search_stack">
                        <property name="transition-type">crossfade</property>

                        <child>
                          <object class="GtkStackPage">
                            <property name="name">main</property>

                            <property name="child">
                              <object class="GtkBox">
                                <property name="orientation">vertical</property>

                                <!-- Panel Stack -->
                                <child>
                                  <object class="AdwViewStack" id="panel_stack">
                                    <property name="vexpand">True</property>

                                    <!-- Images Panel -->
                                    <child>
                                      <object class="AdwViewStackPage">
                                        <property name="icon-name">image-x-generic-symbolic</property>
                                        <property name="name">images</property>
                                        <property name="title" translatable="yes">Images</property>
                                        <property name="child">
                                          <object class="ImagesPanel" id="images_panel">
                                            <binding name="image-list">
                                              <lookup name="image-list" type="Client">
                                                <lookup name="client" type="ConnectionManager">
                                                  <lookup name="connection-manager">Window</lookup>
                                                </lookup>
                                              </lookup>
                                            </binding>
                                          </object>
                                        </property>
                                      </object>
                                    </child>

                                    <!-- Containers Panel -->
                                    <child>
                                      <object class="AdwViewStackPage">
                                        <property name="icon-name">package-x-generic-symbolic</property>
                                        <property name="name">containers</property>
                                        <property name="title" translatable="yes">Containers</property>
                                        <property name="child">
                                          <object class="ContainersPanel" id="containers_panel">
                                            <binding name="container-list">
                                              <lookup name="container-list" type="Client">
                                                <lookup name="client" type="ConnectionManager">
                                                  <lookup name="connection-manager">Window</lookup>
                                                </lookup>
                                              </lookup>
                                            </binding>
                                          </object>
                                        </property>
                                      </object>
                                    </child>

                                  </object>
                                </child>

                                <!-- View Switcher Bar -->
                                <child>
                                  <object class="AdwViewSwitcherBar">
                                    <property name="stack">panel_stack</property>
                                    <binding name="reveal">
                                      <lookup name="title-visible">title</lookup>
                                    </binding>
                                  </object>
                                </child>

                              </object>
                            </property>

                          </object>
                        </child>

                        <child>
                          <object class="SearchPanel" id="search_panel">
                            <binding name="client">
                              <lookup name="client" type="ConnectionManager">
                                <lookup name="connection-manager">Window</lookup>
                              </lookup>
                            </binding>
                          </object>
                        </child>

                      </object>
                    </child>

                  </object>
                </child>

              </object>
            </child>

            <child>
              <object class="AdwLeafletPage">
                <property name="name">overlay</property>

                <property name="child">
                  <object class="LeafletOverlay" id="leaflet_overlay"/>
                </property>

              </object>
            </child>

          </object>
        </child>

      </object>
    </property>

  </template>
</interface>
