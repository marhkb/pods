<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <template class="PodRow" parent="AdwActionRow">
    <property name="activatable">True</property>
    <property name="action-name">pod.show-details</property>

    <child>
      <object class="GtkBox" id="stats_box">
        <property name="margin-end">3</property>
        <property name="spacing">2</property>

        <child>
          <object class="CircularProgressBar" id="cpu_bar">
            <property name="width-request">36</property>
            <property name="label">cpu</property>
          </object>
        </child>

        <child>
          <object class="CircularProgressBar" id="mem_bar">
            <property name="width-request">36</property>
            <property name="label">mem</property>
          </object>
        </child>

      </object>
    </child>

    <child>
      <object class="ContainersCountBar">
        <binding name="container-list">
          <lookup name="container-list" type="Pod">
            <lookup name="pod">PodRow</lookup>
          </lookup>
        </binding>
      </object>
    </child>

    <child>
      <object class="GtkLabel" id="status_label">
        <style>
          <class name="status-badge"/>
        </style>
        <property name="valign">center</property>
      </object>
    </child>

    <child>
      <object class="PodMenuButton" id="menu_button">
        <style>
          <class name="flat"/>
        </style>
        <binding name="pod">
          <lookup name="pod">PodRow</lookup>
        </binding>
        <property name="valign">center</property>
      </object>
    </child>

    <child>
      <object class="GtkImage">
        <property name="icon_name">go-next-symbolic</property>
      </object>
    </child>

  </template>
</interface>
