<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <menu id="menu">
    <section>
      <item>
        <attribute name="custom">theme</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Pods</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>

  <menu id="selection-menu">
    <item>
      <attribute name="label" translatable="yes">_Select All</attribute>
      <attribute name="action">win.select-all</attribute>
    </item>
    <item>
      <attribute name="label" translatable="yes">Select None</attribute>
      <attribute name="action">win.select-none</attribute>
    </item>
  </menu>

  <template class="PdsWindow" parent="AdwApplicationWindow">

    <property name="content">
      <object class="AdwToastOverlay" id="toast_overlay">

        <child>
          <object class="GtkStack" id="main_stack">

            <!-- Empty Page -->
            <child>
              <object class="AdwBin"/>
            </child>

            <!-- Welcome Page -->
            <child>
              <object class="GtkStackPage">
                <property name="name">welcome</property>
                <property name="child">
                  <object class="PdsWelcomePage">
                    <binding name="connection-manager">
                      <lookup name="connection-manager">PdsWindow</lookup>
                    </binding>
                  </object>
                </property>
              </object>
            </child>

            <!-- Connection Chooser Page -->
            <child>
              <object class="GtkStackPage">
                <property name="name">connection-chooser</property>
                <property name="child">
                  <object class="PdsConnectionChooserPage">
                    <binding name="connection-manager">
                      <lookup name="connection-manager">PdsWindow</lookup>
                    </binding>
                  </object>
                </property>
              </object>
            </child>

            <!-- Client View -->
            <child>
              <object class="GtkStackPage">
                <property name="name">client</property>

                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>

                    <child>
                      <object class="AdwFlap" id="connections_flap">
                        <property name="flap-position">start</property>
                        <property name="fold-policy">always</property>
                        <property name="reveal-flap" bind-source="statusbar" bind-property="show-connections-sidebar" bind-flags="sync-create|bidirectional"/>

                        <child type="flap">
                          <object class="PdsConnectionsSidebar">
                            <style>
                              <class name="background"/>
                            </style>

                            <property name="width-request">340</property>
                            <binding name="connection-manager">
                              <lookup name="connection-manager">PdsWindow</lookup>
                            </binding>
                          </object>
                        </child>

                        <child type="content">
                          <object class="AdwFlap" id="actions_flap">
                            <property name="flap-position">end</property>
                            <property name="fold-policy">always</property>
                            <property name="reveal-flap" bind-source="statusbar" bind-property="show-actions-sidebar" bind-flags="sync-create|bidirectional"/>

                            <child type="content">
                              <object class="AdwLeaflet" id="leaflet">
                                <property name="can-navigate-back">True</property>
                                <property name="can-unfold">False</property>

                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">vertical</property>

                                    <!-- Headerbars -->
                                    <child>
                                      <object class="GtkStack" id="header_stack">

                                        <child>
                                          <object class="GtkStackPage">
                                            <property name="name">main</property>

                                            <property name="child">
                                              <object class="AdwHeaderBar">
                                                <property name="centering-policy">strict</property>

                                                <child type="start">
                                                  <object class="GtkToggleButton" id="search_button">
                                                    <property name="icon-name">system-search-symbolic</property>
                                                    <property name="tooltip-text" translatable="yes">Search</property>
                                                  </object>
                                                </child>

                                                <child type="title">
                                                  <object class="GtkStack" id="title_stack">

                                                    <child>
                                                      <object class="GtkStackPage">
                                                        <property name="name">title</property>
                                                        <property name="child">
                                                          <object class="AdwViewSwitcherTitle" id="title">
                                                            <property name="stack">panel_stack</property>
                                                            <property name="title" translatable="yes">Pods</property>
                                                          </object>
                                                        </property>

                                                      </object>
                                                    </child>

                                                    <child>
                                                      <object class="GtkStackPage">
                                                        <property name="name">search</property>
                                                        <property name="child">
                                                          <object class="GtkSearchEntry" id="search_entry"/>
                                                        </property>
                                                      </object>
                                                    </child>

                                                  </object>
                                                </child>

                                                <child type="end">
                                                  <object class="GtkMenuButton" id="menu_button">
                                                    <property name="icon-name">open-menu-symbolic</property>
                                                    <property name="menu-model">menu</property>
                                                    <property name="primary">True</property>
                                                  </object>
                                                </child>

                                                <child type="end">
                                                  <object class="GtkButton" id="selection_mode_button">
                                                    <property name="action-name">win.enter-selection-mode</property>
                                                    <property name="icon-name">selection-mode-symbolic</property>
                                                    <property name="tooltip-text" translatable="yes">Multi-Selection</property>
                                                  </object>
                                                </child>

                                              </object>
                                            </property>

                                          </object>
                                        </child>

                                        <child>
                                          <object class="GtkStackPage">
                                            <property name="name">selection</property>

                                            <property name="child">
                                              <object class="AdwHeaderBar">
                                                <property name="centering-policy">strict</property>
                                                <property name="show-end-title-buttons">False</property>
                                                <property name="show-start-title-buttons">False</property>

                                                <child type="start">
                                                  <object class="GtkButton">
                                                    <property name="action-name">win.exit-selection-mode</property>
                                                    <property name="label" translatable="yes">Cancel</property>
                                                  </object>
                                                </child>

                                                <child type="title">
                                                  <object class="GtkStack" id="selected_items_stack">
                                                    <property name="visible-child-name" bind-source="panel_stack" bind-property="visible-child-name" bind-flags="sync-create"/>

                                                    <child>
                                                      <object class="GtkStackPage">
                                                        <property name="name">images</property>

                                                        <property name="child">
                                                          <object class="GtkMenuButton" id="selected_images_button">
                                                            <style>
                                                              <class name="flat"/>
                                                            </style>
                                                            <property name="direction">none</property>
                                                            <property name="menu-model">selection-menu</property>
                                                          </object>
                                                        </property>

                                                      </object>
                                                    </child>

                                                    <child>
                                                      <object class="GtkStackPage">
                                                        <property name="name">containers</property>

                                                        <property name="child">
                                                          <object class="GtkMenuButton" id="selected_containers_button">
                                                            <style>
                                                              <class name="flat"/>
                                                            </style>
                                                            <property name="direction">none</property>
                                                            <property name="menu-model">selection-menu</property>
                                                          </object>
                                                        </property>

                                                      </object>
                                                    </child>

                                                    <child>
                                                      <object class="GtkStackPage">
                                                        <property name="name">pods</property>

                                                        <property name="child">
                                                          <object class="GtkMenuButton" id="selected_pods_button">
                                                            <style>
                                                              <class name="flat"/>
                                                            </style>
                                                            <property name="direction">none</property>
                                                            <property name="menu-model">selection-menu</property>
                                                          </object>
                                                        </property>

                                                      </object>
                                                    </child>

                                                    <child>
                                                      <object class="GtkStackPage">
                                                        <property name="name">volumes</property>

                                                        <property name="child">
                                                          <object class="GtkMenuButton" id="selected_volumes_button">
                                                            <style>
                                                              <class name="flat"/>
                                                            </style>
                                                            <property name="direction">none</property>
                                                            <property name="menu-model">selection-menu</property>
                                                          </object>
                                                        </property>

                                                      </object>
                                                    </child>

                                                  </object>
                                                </child>

                                              </object>
                                            </property>

                                          </object>
                                        </child>

                                      </object>
                                    </child>

                                    <child>
                                      <object class="GtkStack" id="search_stack">
                                        <property name="transition-type">crossfade</property>

                                        <child>
                                          <object class="GtkStackPage">
                                            <property name="name">main</property>

                                            <property name="child">
                                              <object class="GtkBox">
                                                <property name="orientation">vertical</property>

                                                <!-- Panel Stack -->
                                                <child>
                                                  <object class="AdwViewStack" id="panel_stack">
                                                    <property name="vexpand">True</property>

                                                    <!-- Containers Panel -->
                                                    <child>
                                                      <object class="AdwViewStackPage" id="containers_view_stack_page">
                                                        <property name="icon-name">package-x-generic-symbolic</property>
                                                        <property name="name">containers</property>
                                                        <property name="title" translatable="yes">Containers</property>
                                                        <property name="child">
                                                          <object class="PdsContainersPanel" id="containers_panel">
                                                            <binding name="container-list">
                                                              <lookup name="container-list" type="Client">
                                                                <lookup name="client" type="ConnectionManager">
                                                                  <lookup name="connection-manager">PdsWindow</lookup>
                                                                </lookup>
                                                              </lookup>
                                                            </binding>
                                                          </object>
                                                        </property>
                                                      </object>
                                                    </child>

                                                    <!-- Pods Panel -->
                                                    <child>
                                                      <object class="AdwViewStackPage" id="pods_view_stack_page">
                                                        <property name="icon-name">pods-symbolic</property>
                                                        <property name="name">pods</property>
                                                        <property name="title" translatable="yes" context="podman feature">Pods</property>
                                                        <property name="child">
                                                          <object class="PdsPodsPanel" id="pods_panel">
                                                            <binding name="pod-list">
                                                              <lookup name="pod-list" type="Client">
                                                                <lookup name="client" type="ConnectionManager">
                                                                  <lookup name="connection-manager">PdsWindow</lookup>
                                                                </lookup>
                                                              </lookup>
                                                            </binding>
                                                          </object>
                                                        </property>
                                                      </object>
                                                    </child>

                                                    <!-- Images Panel -->
                                                    <child>
                                                      <object class="AdwViewStackPage" id="images_view_stack_page">
                                                        <property name="icon-name">image-x-generic-symbolic</property>
                                                        <property name="name">images</property>
                                                        <property name="title" translatable="yes">Images</property>
                                                        <property name="child">
                                                          <object class="PdsImagesPanel" id="images_panel">
                                                            <binding name="image-list">
                                                              <lookup name="image-list" type="Client">
                                                                <lookup name="client" type="ConnectionManager">
                                                                  <lookup name="connection-manager">PdsWindow</lookup>
                                                                </lookup>
                                                              </lookup>
                                                            </binding>
                                                          </object>
                                                        </property>
                                                      </object>
                                                    </child>

                                                    <!-- Volumes Panel -->
                                                    <child>
                                                      <object class="AdwViewStackPage" id="volumes_view_stack_page">
                                                        <property name="icon-name">drive-harddisk-symbolic</property>
                                                        <property name="name">volumes</property>
                                                        <property name="title" translatable="yes">Volumes</property>
                                                        <property name="child">
                                                          <object class="PdsVolumesPanel" id="volumes_panel">
                                                            <binding name="volume-list">
                                                              <lookup name="volume-list" type="Client">
                                                                <lookup name="client" type="ConnectionManager">
                                                                  <lookup name="connection-manager">PdsWindow</lookup>
                                                                </lookup>
                                                              </lookup>
                                                            </binding>
                                                          </object>
                                                        </property>
                                                      </object>
                                                    </child>

                                                  </object>
                                                </child>

                                                <!-- View Switcher Bar -->
                                                <child>
                                                  <object class="AdwViewSwitcherBar" id="switcher_bar">
                                                    <property name="stack">panel_stack</property>
                                                  </object>
                                                </child>

                                              </object>
                                            </property>

                                          </object>
                                        </child>

                                        <child>
                                          <object class="PdsSearchPanel" id="search_panel">
                                            <binding name="client">
                                              <lookup name="client" type="ConnectionManager">
                                                <lookup name="connection-manager">PdsWindow</lookup>
                                              </lookup>
                                            </binding>
                                          </object>
                                        </child>

                                      </object>
                                    </child>

                                  </object>
                                </child>

                                <child>
                                  <object class="AdwLeafletPage">
                                    <property name="name">overlay</property>

                                    <property name="child">
                                      <object class="PdsLeafletOverlay" id="leaflet_overlay"/>
                                    </property>

                                  </object>
                                </child>

                              </object>
                            </child>

                            <child type="flap">
                              <object class="PdsActionsSidebar">
                                <style>
                                  <class name="background"/>
                                </style>

                                <property name="width-request">340</property>
                                <binding name="action-list">
                                  <lookup name="action-list">
                                    <lookup name="client" type="ConnectionManager">
                                      <lookup name="connection-manager">PdsWindow</lookup>
                                    </lookup>
                                  </lookup>
                                </binding>
                              </object>
                            </child>

                          </object>
                        </child>

                      </object>
                    </child>

                    <child>
                      <object class="PdsStatusbar" id="statusbar">
                        <binding name="connection-manager">
                          <lookup name="connection-manager">PdsWindow</lookup>
                        </binding>
                      </object>
                    </child>

                  </object>
                </property>

              </object>
            </child>

          </object>
        </child>

      </object>
    </property>

  </template>
</interface>
